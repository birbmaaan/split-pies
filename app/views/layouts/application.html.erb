<!DOCTYPE html>
<html>
  <head>
    <title>SplitPies</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&family=Roboto&display=swap" rel="stylesheet">
    <script type='text/javascript'>
      window.logo = '<%= image_url('splitpies_logo.jpg') %>'
      window.pie = '<%= image_url('piephoto.jpg') %>'
      window.money = '<%= image_url('money.jpg') %>'
      window.nobill = '<%= image_url('nobill.png') %>'
      window.asset1 = '<%= image_url('asset1.png') %>'
      window.asset2 = '<%= image_url('asset2.png') %>'
      window.asset3 = '<%= image_url('asset3.png') %>'
      window.asset4 = '<%= image_url('asset4.png') %>'
      window.catGeneral = '<%= image_url('cat-general.png') %>'
      window.catFood = '<%= image_url('cat-food.png') %>'
      window.catGrocery = '<%= image_url('cat-grocery.png') %>'
      window.catEntertainment = '<%= image_url('cat-entertainment.png') %>'
      window.catHome = '<%= image_url('cat-home.png') %>'
      window.catTransportation = '<%= image_url('cat-transportation.png') %>'
      window.catUtilities = '<%= image_url('cat-utilities.png') %>'
    </script>
    <%= favicon_link_tag asset_path('favicon.ico') %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <meta property="og:title" content="SplitPies" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://split-pies.herokuapp.com/" />
    <meta property="og:image" content="<%= image_url('readme4.png')%>" />
    <meta property="og:description" content="Split expenses with friends the easy way with this Splitwise clone" />
 
  </head>

  <body>
    <%= yield %>
  </body>
</html>
